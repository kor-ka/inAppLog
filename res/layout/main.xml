<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:gravity="center"
		android:orientation="vertical"
		android:background="#314013"
		android:alpha="1">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/hello"/>

		<Button
			android:layout_height="wrap_content"
			android:text="let's test this stuff!"
			android:layout_width="wrap_content"
			android:id="@+id/btn"/>

	</LinearLayout>

	<FrameLayout
		android:layout_height="100dp"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:background="#000000"
		android:alpha="0.5">

		<ScrollView
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:id="@+id/scroll">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="Hi there! Now I wona b ur log!"
				android:textColor="#DBDBDB"
				android:id="@+id/inAppLogTV"/>

		</ScrollView>

		<ImageButton
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="top|right"
			android:background="@drawable/av_pause_over_video"
			android:id="@+id/pauseButton"	/>

		<ImageButton
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="top|right"
			android:background="@drawable/av_play_over_video"
			android:id="@+id/playButton"/>

	</FrameLayout>

</FrameLayout>

